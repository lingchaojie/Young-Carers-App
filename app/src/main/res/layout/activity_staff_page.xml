<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/com.example.login_registernew"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_staff_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_registernew.staffPage">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Staff Contact Details"
        app:titleTextColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="21dp"
        android:text="Rules for Messaging"
        android:textSize="22dp"
        android:background="@drawable/button_border"
        android:id="@+id/information"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/homebutton"
        android:id="@+id/homeButton"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/com.example.login_registernew"
        android:id="@+id/staff1"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/chris_ranson"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/information"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/com.example.login_registernew"
        android:name = "de.hdodenhof:circleimageview"
        android:id="@+id/staff2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/amy_howard"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignTop="@+id/staff1"
        android:layout_centerHorizontal="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/com.example.login_registernew"
        android:id="@+id/staff3"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/dave_willcock"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignTop="@+id/staff2"
        android:layout_alignRight="@+id/homeButton"
        android:layout_alignEnd="@+id/homeButton" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/com.example.login_registernew"
        android:id="@+id/staff4"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/graeme_flaxen"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/staff1"
        android:layout_alignLeft="@+id/staff1"
        android:layout_alignStart="@+id/staff1" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/com.example.login_registernew"
        android:id="@+id/staff5"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/jenna_robson"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignTop="@+id/staff4"
        android:layout_alignLeft="@+id/staff2"
        android:layout_alignStart="@+id/staff2" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/com.example.login_registernew"
        android:id="@+id/staff6"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/lisa_watson"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignTop="@+id/staff5"
        android:layout_alignLeft="@+id/staff3"
        android:layout_alignStart="@+id/staff3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/staff8"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/wendy_greenhow"
        app2:civ_border_width="2dp"
        app2:civ_border_color="#FF000000"
        android:layout_alignTop="@+id/staff7"
        android:layout_alignLeft="@+id/staff5"
        android:layout_alignStart="@+id/staff5" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/staff7"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/sue_callaghan"
        app2:civ_border_width="2dp"
        app2:civ_border_color="#FF000000"
        android:layout_below="@+id/staff4"
        android:layout_alignLeft="@+id/staff4"
        android:layout_alignStart="@+id/staff4"
        android:layout_marginTop="42dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/phone"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_above="@+id/homeButton"
        android:layout_alignLeft="@+id/homeButton"
        android:layout_alignStart="@+id/homeButton"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageButton2" />
</RelativeLayout>
