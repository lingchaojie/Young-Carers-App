<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_parents_guardians"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_registernew.parentsGuardians">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Parents and Guardians Information"
        app:titleTextColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/homebutton"
        android:id="@+id/homeButton"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="125dp"
        android:background="@drawable/button_border"
        android:id="@+id/supportCarer"
        android:textAlignment="center"
        android:padding="35dp"
        android:textSize="34sp"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/feedback"
        android:layout_alignLeft="@+id/feedback"
        android:layout_alignStart="@+id/feedback" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="255dp"
        android:background="@drawable/button_border"
        android:id="@+id/todo"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="30sp"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        android:layout_alignTop="@+id/supportCentre"
        android:layout_alignLeft="@+id/supportCarer"
        android:layout_alignStart="@+id/supportCarer" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="255dp"
        android:background="@drawable/button_border"
        android:id="@+id/supportCentre"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="24sp"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/supportCarer"
        android:layout_alignRight="@+id/supportCarer"
        android:layout_alignEnd="@+id/supportCarer" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/button_border"
        android:id="@+id/feedback"
        android:text="Suggestions"
        android:textAllCaps="false"
        android:textSize="14pt"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignTop="@+id/homeButton"
        android:layout_toLeftOf="@+id/homeButton"
        android:layout_toStartOf="@+id/homeButton" />

</RelativeLayout>
