<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_extra_info"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_registernew.extraInfo">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Extra Information"
        app:titleTextColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/freeStuff"
        android:text="Free Things for Carers"
        android:textSize="55dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        />

    <TextView
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:background="@drawable/button_border"
        android:layout_marginTop="17dp"
        android:id="@+id/places"
        android:text="Fun Places to Go"
        android:textSize="55dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        android:layout_below="@+id/freeStuff"
        android:layout_alignLeft="@+id/freeStuff"
        android:layout_alignStart="@+id/freeStuff" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/homebutton"
        android:id="@+id/homeButton"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp" />


</RelativeLayout>
